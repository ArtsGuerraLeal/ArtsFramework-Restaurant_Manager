{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
    <div class="app-page-title mb-1">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="pe-7s-graph text-success">
                    </i>
                </div>
                <div>Patient List
                    <div class="page-title-subheading">Database of all the patients
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Patients</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Gender</th>
                        <th>Birthdate</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Religion</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Gender</th>
                        <th>Birthdate</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Religion</th>
                        <th>Actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for patient in patients %}
                        <tr>
                            <td>{{ patient.id }}</td>
                            <td>{{ patient.firstName }}</td>
                            <td>{{ patient.lastName }}</td>
                            <td>{{ patient.gender }}</td>
                            <td>{{ patient.birthdate ? patient.birthdate|date('Y-m-d') : '' }}</td>
                            <td>{{ patient.email }}</td>
                            <td>{{ patient.phone }}</td>
                            <td>{{ patient.religion }}</td>
                            <td>

                                <div class="btn btn-primary btn-sm">
                                    <a class="text-white" href="{{ path('patient_show', {'id': patient.id}) }}">View</a>
                                </div>
                                <div class="btn btn-primary btn-sm">
                                    <a class="text-white" href="{{ path('patient_edit', {'id': patient.id}) }}">Edit</a>
                                </div>
                                <div class="btn btn-primary btn-sm">
                                    <a class="text-white" href="{{ path('patient_appointment', {'id': patient.id}) }}">New Appointment</a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>

    <a href="{{ path('patient_new') }}">Create new</a>
{% endblock %}
