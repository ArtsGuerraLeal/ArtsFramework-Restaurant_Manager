{% extends 'base.html.twig' %}

{% block title %}Patient Report{% endblock %}

{% block body %}
    <div class="app-page-title mb-1">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="pe-7s-graph text-success">
                    </i>
                </div>
                <div>Patient List
                    <div class="page-title-subheading">Database of all the patients
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-header">
            Fields
          </div>
        <div class="card-body">
{{ form_start(form) }}

            {% for row in form %}

                {{ form_row(row) }}

            {% endfor %}

{{ form_end(form) }}
        </div>
        <div class="card-footer small text-muted"></div>
    </div>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Patients</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>ID</th>

                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>ID</th>

                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for report in reports %}
                        <tr>
                            <td>{{ report.id }}</td>

                            <td>{{ report.datecreated ? report.datecreated|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <div class="btn btn-primary btn-sm">
                                    <a class="text-white" href="{{ path('daily_report_show', {'id': report.id}) }}">View</a>
                                </div>
                                <div class="btn btn-primary btn-sm">
                                    <a class="text-white" href="{{ path('daily_report_show', {'id': report.id}) }}">Edit</a>
                                </div>


                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>


{% endblock %}
