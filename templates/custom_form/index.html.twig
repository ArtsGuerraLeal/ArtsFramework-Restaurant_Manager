{% extends 'base.html.twig' %}

{% block title %}CustomForm index{% endblock %}

{% block body %}
    <div class="app-page-title mb-1">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="pe-7s-graph text-success">
                    </i>
                </div>
                <div>Custom Forms
                    <div class="page-title-subheading">Database of all the Custom Forms
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Staff</div>
        <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Json Fields</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for custom_form in custom_forms %}
            <tr>
                <td>{{ custom_form.id }}</td>
                <td>{{ custom_form.name }}</td>
                <td>{{ custom_form.fields ? custom_form.fields|json_encode : '' }}</td>
                <td>
                    <div class="btn btn-primary btn-sm">
                        <a class="text-white" href="{{ path('custom_form_show', {'id': custom_form.id}) }}">View</a>
                    </div>
                    <div class="btn btn-primary btn-sm">
                        <a class="text-white" href="{{ path('custom_form_edit', {'id': custom_form.id}) }}">Edit</a>
                    </div>


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated at {{ "now"|date("d-m-Y")}}</div>
</div>

    <a href="{{ path('custom_form_new') }}">Create new</a>
{% endblock %}